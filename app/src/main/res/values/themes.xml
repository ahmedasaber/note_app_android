<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SQLiteExample" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_floatingBtn</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- light theme -->
    <style name="RC_item">
        <item name="android:background">@drawable/rv_item</item>
    </style>
    <style name="SCREEN_BG">
        <item name="android:background">@color/white</item>
    </style>
    <style name="TOOLBAR">
        <item name="android:titleTextColor">@color/black_floatingBtn</item>
    </style>
    <style name="TEXT_TIME">
        <item name="android:background">@color/TxtBackground_light</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>