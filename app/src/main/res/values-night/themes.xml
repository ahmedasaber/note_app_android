<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SQLiteExample" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/background_dark</item>
        <item name="colorOnPrimary">@color/background_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/floatingBtn_dark</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- dark theme -->
    <style name="RC_item">
        <item name="android:background">@drawable/rv_item_dark</item>
    </style>
    <style name="SCREEN_BG">
        <item name="android:background">@color/background_dark</item>
    </style>
    <style name="SEARCH">
        <item name="android:editTextColor">@color/black</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="TOOLBAR">
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="TEXT_TIME">
        <item name="android:background">@color/TxtBackground_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>